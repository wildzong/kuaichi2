<view>
  <view class='view_form'>
    <form bindsubmit='search_address'>
      <view>
        <input class='input_address' name='search_place' placeholder='请输入你想搜索的地址'></input>
      </view>
      <view class='view_button'>
        <button class='button' form-type='submit'>搜索</button>
        <button class='button' bindtap='marker_tap'>确认</button>
      </view>  
    </form> 
  </view>

  <view class='view_map'>
    <map id="map2" markers='{{markers}}' scale="14" latitude='{{latitude}}' longitude='{{longitude}}' style="width: 100%; height: 100vh;" ></map>
  </view>
</view>